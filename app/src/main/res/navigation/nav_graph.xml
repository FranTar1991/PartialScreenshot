<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.android.partialscreenshot.main_fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_viewPagerDetails"
            app:destination="@id/viewPagerDetails" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.android.partialscreenshot.detailsView.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="uri"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerDetails"
        android:name="com.example.android.partialscreenshot.detailsView.viewpager.ViewPagerDetails"
        android:label="ViewPagerDetails" >
        <argument
            android:name="uri"
            app:argType="string" />
    </fragment>
</navigation>